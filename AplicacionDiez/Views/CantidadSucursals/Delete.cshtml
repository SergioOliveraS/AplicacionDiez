@model AplicacionDiez.Models.CantidadSucursal

@{
    ViewData["Title"] = "Eliminar cantidad de producto en sucursal";
}

<h3>¿Estás seguro que quieres eliminar el producto de la sucursal?</h3>
<div>
    <hr />
    <dl class="row bg-dark text-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sucursal.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Producto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Producto.CodigoBarras)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantidadProducto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantidadProducto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary" style="margin-top:150px">Regresar a la lista</a>
</div>
