@model AplicacionDiez.Models.Productos

@{
    ViewData["Title"] = "Detalles de producto";
}

<h3>Detalles de producto</h3>

<div>
    <hr />
    <dl class="row bg-dark text-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioUnitario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CodigoBarras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodigoBarras)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detalles)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detalles)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" style="margin-top:10px" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary" style="margin-top:150px">Regresar a la lista</a>
</div>
